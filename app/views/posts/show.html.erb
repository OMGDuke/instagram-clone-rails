<h2><%= @post.title %></h2>
<h3><%= @post.description %></h3>

<p><%= link_to "Edit #{@post.title}", edit_post_path(@post) %></p>
<p><%= link_to "Delete #{@post.title}", post_path(@post), method: :delete %></p>

<p><%= link_to "New Comment", new_post_comment_path(@post) %></p>

<% if @comments.any? %>
  <% @comments.each do |comment| %>
    <%= comment.thoughts %>
  <% end %>
<% else %>
  <h3>No Comments yet</h3>
<% end %>
